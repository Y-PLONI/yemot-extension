{
  "version": "1.0.0",
  "lastUpdate": "2025-10-15",
  "description": "סכמת הגדרות מלאה למערכת ימות המשיח - תומך בכל המודולים והפקודות",
  
  "modules": {
    "general": {
      "name": "הגדרות כלליות",
      "description": "הגדרות שאינן תלויות במודול ספציפי",
      "settings": [
        {
          "key": "title",
          "description": "כותרת השלוחה",
          "type": "text",
          "required": false,
          "example": "title=ברוכים הבאים למערכת"
        },
        {
          "key": "start",
          "description": "שלוחת התחלה של המערכת",
          "type": "folder",
          "required": false,
          "values": ["min", "max", "/", "/<path>"],
          "example": "start=min"
        },
        {
          "key": "go_to_folder",
          "description": "מעבר לתיקייה אחרת",
          "type": "folder",
          "required": false,
          "values": ["/", "/<path>", ".", "..", "../..", "hangup"],
          "example": "go_to_folder=/1/1"
        },
        {
          "key": "password",
          "description": "הגדרת סיסמה לשלוחה",
          "type": "text",
          "required": false,
          "example": "password=1234"
        },
        {
          "key": "language",
          "description": "שפת המערכת",
          "type": "enum",
          "required": false,
          "values": ["he", "en", "ar", "es", "de", "de1", "fr", "ru", "am", "wap"],
          "default": "he",
          "example": "language=he"
        },
        {
          "key": "voice",
          "description": "בחירת קול TTS",
          "type": "enum",
          "required": false,
          "values": ["Elik_2100", "Jacob", "ymMale", "Sivan", "Osnat", "ymFemale"],
          "example": "voice=Elik_2100"
        },
        {
          "key": "rate",
          "description": "מהירות דיבור TTS",
          "type": "number",
          "required": false,
          "range": [-10, 10],
          "example": "rate=0"
        }
      ]
    },
    
    "menu": {
      "name": "תפריט",
      "description": "מודול תפריט בסיסי",
      "type_value": "menu",
      "settings": [
        {
          "key": "type",
          "description": "הגדרת מודול תפריט",
          "type": "fixed",
          "required": true,
          "value": "menu",
          "example": "type=menu"
        },
        {
          "key": "digits",
          "description": "מספר ספרות לשלוחה",
          "type": "number",
          "required": false,
          "range": [1, 9],
          "default": 1,
          "example": "digits=2"
        },
        {
          "key": "timeout",
          "description": "זמן המתנה בשניות",
          "type": "number",
          "required": false,
          "default": 5,
          "example": "timeout=10"
        }
      ]
    },
    
    "api": {
      "name": "API",
      "description": "מודול API - חיבור לשרתים חיצוניים",
      "type_value": "api",
      "settings": [
        {
          "key": "type",
          "description": "הגדרת מודול API",
          "type": "fixed",
          "required": true,
          "value": "api",
          "example": "type=api"
        },
        {
          "key": "api_link",
          "description": "כתובת URL של ה-API",
          "type": "url",
          "required": true,
          "example": "api_link=https://example.com/api"
        },
        {
          "key": "api_call_id_send",
          "description": "שליחת מזהה שיחה",
          "type": "enum",
          "required": false,
          "values": ["yes", "no"],
          "default": "no",
          "example": "api_call_id_send=no"
        },
        {
          "key": "api_hangup_send",
          "description": "שליחת אירוע ניתוק",
          "type": "enum",
          "required": false,
          "values": ["yes", "no"],
          "default": "no",
          "example": "api_hangup_send=no"
        },
        {
          "key": "api_did_send",
          "description": "שליחת מספר המחויג (DID)",
          "type": "enum",
          "required": false,
          "values": ["yes", "no"],
          "default": "no",
          "example": "api_did_send=no"
        },
        {
          "key": "api_extension_send",
          "description": "שליחת מספר השלוחה",
          "type": "enum",
          "required": false,
          "values": ["yes", "no"],
          "default": "no",
          "example": "api_extension_send=no"
        },
        {
          "key": "api_enter_id_send",
          "description": "שליחת מזהה שהוקש",
          "type": "enum",
          "required": false,
          "values": ["yes", "no"],
          "default": "no",
          "example": "api_enter_id_send=no"
        },
        {
          "key": "api_###",
          "description": "הגדרת שדה קלט דינמי (### = מספר סידורי 000-999)",
          "type": "dynamic",
          "required": false,
          "pattern": "^api_\\d{3}$",
          "format": "name,required,message,record,digits,type",
          "example": "api_000=library_ver,yes,,,4,Number"
        }
      ]
    },
    
    "playfile": {
      "name": "השמעת קבצים",
      "description": "מודול השמעת קבצי שמע",
